{
  "name": "pcrs",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "private": true,
  "scripts": {
    "download-contours": "node scripts/download-contours",
    "build": "yarn build-data && next build",
    "build-data": "node scripts/build-data",
    "dev": "node server/index.js",
    "start": "NODE_ENV=production node server/index.js",
    "lint": "xo",
    "test": "ava",
    "scalingo-postbuild": "yarn download-contours && yarn build-data && next build"
  },
  "dependencies": {
    "@gouvfr/dsfr": "^1.8.1",
    "@keyv/sqlite": "^3.6.5",
    "@next/bundle-analyzer": "^13.0.7",
    "@turf/union": "^6.5.0",
    "date-fns": "^2.29.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "got": "^12.5.3",
    "http-errors": "^2.0.0",
    "joi": "^17.7.0",
    "js-yaml": "^4.1.0",
    "keyv": "^4.5.2",
    "lodash-es": "^4.17.21",
    "maplibre-gl": "^2.4.0",
    "mongodb": "^5.1.0",
    "morgan": "^1.10.0",
    "next": "^13.0.3",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-autocomplete": "^1.8.1",
    "react-dom": "^18.2.0",
    "sharp": "^0.31.2",
    "underscore.string": "^3.3.6"
  },
  "devDependencies": {
    "ava": "^5.2.0",
    "eslint-config-xo": "^0.42.0",
    "eslint-config-xo-nextjs": "^4.2.2",
    "mongodb-memory-server": "^8.12.0",
    "xo": "^0.52.4"
  },
  "xo": {
    "extends": "xo-nextjs",
    "semicolon": false,
    "space": 2,
    "envs": [
      "browser",
      "es2021"
    ],
    "rules": {
      "camelcase": "warn",
      "unicorn/prevent-abbreviations": "off",
      "comma-dangle": [
        "error",
        "never"
      ],
      "n/prefer-global/process": "off",
      "unicorn/no-array-for-each": "off",
      "unicorn/prefer-switch": "off",
      "react/no-unknown-property": [
        "error",
        {
          "ignore": [
            "global",
            "jsx"
          ]
        }
      ]
    }
  },
  "engines": {
    "node": ">= 18"
  }
}
